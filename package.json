{
    "name": "@badisi/auth-js",
    "description": "Authentication and authorization support for web based desktop and mobile applications.",
    "homepage": "https://github.com/Badisi/auth-js",
    "license": "GPL-3.0-only",
    "author": "Badisi",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Badisi/auth-js.git"
    },
    "keywords": [
        "authentication",
        "authorization",
        "oidc",
        "openidconnect",
        "openid",
        "security",
        "identity",
        "oauth2",
        "oauth",
        "auth",
        "authn",
        "web",
        "mobile"
    ],
    "private": true,
    "scripts": {
        "ncu": "npx npm-check-updates -i --format=group --packageFile='{,apps/**/,libs/**/}package.json'",
        "migrate:nx": "nx migrate latest",
        "migrate:cap": "cap migrate",
        "lint": "eslint .",
        "test:ci": "nx run-many --target=test:ci --projects=auth-js,auth-vue,ngx-auth --output-style=static",
        "build": "nx run-many --target=build:nx --projects=auth-js,auth-vue,ngx-auth --output-style=static --verbose",
        "release": "node ./scripts/release.mjs --verbose",
        "release:dry-run": "npm run release -- --dry-run",
        "postinstall": "patch-package",
        "prepare": "husky || true"
    },
    "workspaces": [
        "apps/demo-app/capacitor",
        "apps/demo-app/web",
        "apps/demo-e2e",
        "apps/demo-idp",
        "apps/website",
        "libs/auth-js",
        "libs/auth-vue",
        "libs/ngx-auth"
    ],
    "dependencies": {
        "@angular/common": "20.3.7",
        "@angular/compiler": "20.3.7",
        "@angular/core": "20.3.7",
        "@angular/forms": "20.3.7",
        "@angular/platform-browser": "20.3.7",
        "@angular/router": "20.3.7",
        "rxjs": "7.8.2",
        "vue": "3.5.22",
        "vue-router": "4.6.3",
        "zone.js": "~0.15.1"
    },
    "overrides": {
        "@angular-devkit/build-angular": {
            "jest-environment-jsdom": "30.x",
            "jest": "30.x"
        }
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "20.3.7",
        "@angular/compiler-cli": "20.3.7",
        "@angular/cli": "20.3.7",
        "@commitlint/cli": "^20.1.0",
        "@commitlint/config-conventional": "^20.0.0",
        "@hug/eslint-config": "^22.0.0",
        "@nx/angular": "22.0.1",
        "@nx/eslint": "22.0.1",
        "@nx/eslint-plugin": "22.0.1",
        "@nx/jest": "22.0.1",
        "@nx/js": "22.0.1",
        "@nx/vite": "22.0.1",
        "@nx/vue": "22.0.1",
        "@nx/web": "22.0.1",
        "@nx/webpack": "22.0.1",
        "@nx/workspace": "22.0.1",
        "@swc-node/register": "^1.11.1",
        "@types/jest": "30.0.0",
        "@types/node": "24.9.1",
        "@vitejs/plugin-vue": "6.0.1",
        "autoprefixer": "^10.4.21",
        "cpy-cli": "^6.0.0",
        "detect-indent": "^7.0.2",
        "esbuild": "^0.25.11",
        "husky": "^9.1.7",
        "jest": "30.2.0",
        "jest-util": "30.2.0",
        "jest-environment-jsdom": "30.2.0",
        "jest-preset-angular": "15.0.3",
        "jiti": "2.6.1",
        "lint-staged": "^16.2.6",
        "ng-packagr": "20.3.0",
        "nx": "22.0.1",
        "patch-package": "^8.0.1",
        "postcss": "^8.5.6",
        "postcss-url": "~10.1.3",
        "ts-jest": "29.4.5",
        "ts-node": "^10.9.2",
        "tslib": "^2.8.1",
        "typescript": "~5.9.3",
        "vite": "7.1.12",
        "vite-plugin-simple-html": "^1.0.1",
        "vite-plugin-static-copy": "^3.1.4"
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ],
        "rules": {
            "type-enum": [
                2,
                "always",
                [
                    "build",
                    "chore",
                    "ci",
                    "docs",
                    "feat",
                    "fix",
                    "perf",
                    "refactor",
                    "revert",
                    "style",
                    "test",
                    "deps"
                ]
            ]
        }
    },
    "lint-staged": {
        "**/*.{js,json,ts,html}": [
            "eslint --fix"
        ]
    },
    "packageManager": "npm@11.6.2"
}
