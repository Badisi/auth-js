{
    "name": "@badisi/auth-js",
    "description": "Authentication and authorization support for web based desktop and mobile applications.",
    "homepage": "https://github.com/Badisi/auth-js",
    "license": "GPL-3.0-only",
    "author": "Badisi",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Badisi/auth-js.git"
    },
    "keywords": [
        "authentication",
        "authorization",
        "oidc",
        "openidconnect",
        "openid",
        "security",
        "identity",
        "oauth2",
        "oauth",
        "auth",
        "authn",
        "web",
        "mobile"
    ],
    "private": true,
    "type": "module",
    "scripts": {
        "ncu": "npx npm-check-updates -i --format=group --packageFile='{,apps/**/,libs/**/}package.json'",
        "migrate:nx": "nx migrate latest",
        "migrate:cap": "cap migrate",
        "prettier": "prettier . --check",
        "lint": "eslint .",
        "test:ci": "nx run-many --target=test:ci --projects=auth-js,auth-vue,ngx-auth --output-style=static",
        "build": "nx run-many --target=build:nx --projects=auth-js,auth-vue,ngx-auth --output-style=static --verbose",
        "release": "node ./scripts/release.mjs --verbose",
        "release:dry-run": "npm run release -- --dry-run",
        "postinstall": "patch-package",
        "prepare": "husky || true"
    },
    "workspaces": [
        "apps/demo-app/capacitor",
        "apps/demo-app/web",
        "apps/demo-e2e",
        "apps/demo-idp",
        "apps/website",
        "libs/auth-js",
        "libs/auth-vue",
        "libs/ngx-auth"
    ],
    "dependencies": {
        "@angular/common": "~18.2.0",
        "@angular/compiler": "~18.2.0",
        "@angular/core": "~18.2.0",
        "@angular/forms": "~18.2.0",
        "@angular/platform-browser": "~18.2.0",
        "@angular/platform-browser-dynamic": "~18.2.0",
        "@angular/router": "~18.2.0",
        "rxjs": "7.8.1",
        "vue": "3.5.17",
        "vue-router": "4.5.1",
        "zone.js": "~0.14.10"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "~18.2.0",
        "@angular-devkit/core": "~18.2.0",
        "@angular-devkit/schematics": "~18.2.0",
        "@angular/cli": "~18.2.0",
        "@angular/compiler-cli": "~18.2.0",
        "@commitlint/cli": "^19.8.1",
        "@commitlint/config-conventional": "^19.8.1",
        "@hug/eslint-config": "^21.0.0-beta.11",
        "@nx/angular": "21.2.1",
        "@nx/eslint": "21.2.1",
        "@nx/eslint-plugin": "21.2.1",
        "@nx/jest": "21.2.1",
        "@nx/js": "21.2.1",
        "@nx/vite": "21.2.1",
        "@nx/vue": "21.2.1",
        "@nx/web": "21.2.1",
        "@nx/webpack": "21.2.1",
        "@nx/workspace": "21.2.1",
        "@swc-node/register": "^1.10.10",
        "@types/jest": "^30.0.0",
        "@types/node": "24.0.10",
        "@vitejs/plugin-vue": "6.0.0",
        "autoprefixer": "^10.4.21",
        "cpy-cli": "^5.0.0",
        "detect-indent": "^7.0.1",
        "esbuild": "^0.25.5",
        "husky": "^9.1.7",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "jest-preset-angular": "14.6.0",
        "jiti": "2.4.2",
        "lint-staged": "^16.1.2",
        "ng-packagr": "~18.2.0",
        "nx": "21.2.1",
        "patch-package": "^8.0.0",
        "postcss": "^8.5.6",
        "postcss-url": "~10.1.3",
        "prettier": "^3.6.2",
        "prettier-plugin-multiline-arrays": "^4.0.3",
        "ts-jest": "^29.4.0",
        "ts-node": "^10.9.2",
        "tslib": "^2.8.1",
        "typescript": "~5.5",
        "vite": "6.2.5",
        "vite-plugin-simple-html": "^1.0.1",
        "vite-plugin-static-copy": "^3.1.0"
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ],
        "rules": {
            "type-enum": [
                2,
                "always",
                [
                    "build",
                    "chore",
                    "ci",
                    "docs",
                    "feat",
                    "fix",
                    "perf",
                    "refactor",
                    "revert",
                    "style",
                    "test",
                    "deps"
                ]
            ]
        }
    },
    "lint-staged": {
        "**/*.{js,json,ts,html}": [
            "eslint ."
        ],
        "**/*.{scss,html,vue,json}": [
            "prettier --check"
        ]
    },
    "packageManager": "npm@11.4.2"
}
