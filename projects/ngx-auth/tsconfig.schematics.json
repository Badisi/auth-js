{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "../../dist/ngx-auth/schematics",
        "rootDir": "schematics",
        "lib": [
            "es2018",
            "dom"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": true,
        "noEmitOnError": true,
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "target": "es6",
        "types": [
            "jasmine",
            "node"
        ]
    },
    "include": [
        "schematics/**/*"
    ],
    "exclude": [
        "schematics/**/*.spec.ts"
    ]
}
