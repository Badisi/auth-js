{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "outDir": "../../../dist/ngx-auth/schematics",
        "rootDir": ".",
        "lib": [
            "es2018",
            "dom"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": true,
        "noEmitOnError": true,
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "target": "es2018",
        "types": [
            "jest",
            "node"
        ]
    },
    "include": [
        "**/*"
    ],
    "exclude": [
        "**/*.spec.ts"
    ]
}
